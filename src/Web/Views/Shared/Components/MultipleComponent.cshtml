<article text-2xl>
    <fieldset class="space-y-2">
        <legend>
            1) (@Model.Organizer - @Model.Year) @Model.Statement
        </legend>
        <div>
            <input type="radio" id="OptionA" name="chemical" value="AA" class="peer hidden" />
            <label for="OptionA" class="flex cursor-pointer items-center justify-between rounded-lg border border-gray-100 bg-white p-4 shadow-sm hover:border-gray-200 peer-checked:border-indigo-600 peer-checked:ring-1 peer-checked:ring-indigo-600">
                @Model.OptionA
            </label>
        </div>
        <div>
            <input type="radio" id="OptionB" name="chemical" value="AB" class="peer hidden" />
            <label for="OptionB" class="flex cursor-pointer items-center justify-between rounded-lg border border-gray-100 bg-white p-4 shadow-sm hover:border-gray-200 peer-checked:border-indigo-600 peer-checked:ring-1 peer-checked:ring-indigo-600">
                @Model.OptionB
            </label>
        </div>
        <div>
            <input type="radio" id="OptionC" name="chemical" value="AC" class="peer hidden" />
            <label for="OptionC" class="flex cursor-pointer items-center justify-between rounded-lg border border-gray-100 bg-white p-4 shadow-sm hover:border-gray-200 peer-checked:border-indigo-600 peer-checked:ring-1 peer-checked:ring-indigo-600">
                @Model.OptionC
            </label>
        </div>
        <div>
            <input type="radio" id="OptionD" name="chemical" value="AD" class="peer hidden" />
            <label for="OptionD" class="flex cursor-pointer items-center justify-between rounded-lg border border-gray-100 bg-white p-4 shadow-sm hover:border-gray-200 peer-checked:border-indigo-600 peer-checked:ring-1 peer-checked:ring-indigo-600">
                @Model.OptionD
            </label>
        </div>
        <div>
            <input type="radio" id="OptionE" name="chemical" value="AE" class="peer hidden" />
            <label for="OptionE" class="flex cursor-pointer items-center justify-between rounded-lg border border-gray-100 bg-white p-4 shadow-sm hover:border-gray-200 peer-checked:border-indigo-600 peer-checked:ring-1 peer-checked:ring-indigo-600">
                @Model.OptionE
            </label>
        </div>
    </fieldset>
</article>

<section class="font-medium text-sm text-center text-white">
    <br />
    <div class="inline-flex items-center rounded py-1 bg-indigo-600">
        <a href="#" class="inline-flex h-8 w-8 items-center justify-center rtl:rotate-180 transition hover:bg-indigo-700">
            <span class="sr-only">Prev Page</span>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
            </svg>
        </a>

        <span class="h-4 w-px bg-white/25" aria-hidden="true"></span>

        <div>
            <label for="PaginationPage" class="sr-only">Page</label>
            <input type="number" min="1" value="2" id="PaginationPage" class="h-8 w-12 rounded border-none bg-transparent p-0 text-center text-xs font-medium [-moz-appearance:_textfield] focus:outline-none focus:ring-inset focus:ring-white [&::-webkit-inner-spin-button]:m-0 [&::-webkit-inner-spin-button]:appearance-none [&::-webkit-outer-spin-button]:m-0 [&::-webkit-outer-spin-button]:appearance-none transition hover:bg-indigo-700" />
        </div>

        <span class="h-4 w-px bg-white/25"></span>

        <a href="#" class="inline-flex h-8 w-8 items-center justify-center rtl:rotate-180 transition hover:bg-indigo-700">
            <span class="sr-only">Next Page</span>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
            </svg>
        </a>
    </div>

    &nbsp
    <a href="#" class="h-4 px-12 py-3 rounded bg-emerald-700 transition hover:bg-emerald-500">
        Enviar
    </a>
</section>
